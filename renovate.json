{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "major": {
    "enabled": false
  },
  "dependencyDashboard": false,
  "lockFileMaintenance": {
    "enabled": true
  },
  "postUpdateOptions": [
    "npmDedupe"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "helm"
      ],
      "matchPackageNames": [
        "postgresql"
      ],
      "enabled": false
    }
  ]
}
