{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "major": {
    "enabled": false
  },
  "dependencyDashboard": false,
  "regexManagers": [
    {
      "fileMatch": [
        "^\\.github/workflows/.*\\.ya?ml$"
      ],
      "matchStrings": [
        "python-version:\\s*\"?(?<currentValue>\\d+\\.\\d+)\"?"
      ],
      "depNameTemplate": "python",
      "datasourceTemplate": "python-version"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "python-version"
      ],
      "enabled": false
    }
  ]
}
