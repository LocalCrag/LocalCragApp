{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "major"
      ],
      "enabled": false,
      "addLabels": [
        "major-update"
      ],
      "createIssue": true,
      "description": "Major updates are disabled; Renovate will open an issue instead."
    }
  ]
}
