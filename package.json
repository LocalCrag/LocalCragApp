{
  "devDependencies": {
    "husky": "^9.1.6",
    "lint-staged": "^15.4.3"
  },
  "scripts": {
    "prepare": "husky install"
  },
  "lint-staged": {
    "client/**/*.{js,ts}": [
      "prettier --write",
      "eslint"
    ],
    "server/**/*.{py}": [
      "pipenv run black",
      "pipenv run flake8",
      "pipenv run isort"
    ]
  }
}